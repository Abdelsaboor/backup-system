{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // -- الجزء الأهم يبدأ من هنا --
    "baseUrl": ".", // يخبر المحرر أن المسارات ستبدأ من المجلد الرئيسي
    "paths": {
      "@/*": ["./*"] // يعرف الاختصار @/* بأنه يشير إلى أي ملف داخل المجلد الرئيسي
    }
    // -- الجزء الأهم ينتهي هنا --
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}